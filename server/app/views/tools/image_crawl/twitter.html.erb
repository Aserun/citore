<%= link_to("https://twitter.com", class: "logo_link") do %>
  <p><%= image_tag("icon/twitter_logo.png", size: "64x64") %></p>
  <p><b>Twitter</b></p>
<% end %>
<%= form_tag(twitter_crawl_tools_image_crawl_url, multipart: true, class: "pure-form pure-form-aligned") do %>
  <div class="pure-control-group">
    <%= label_tag("検索種別") %>
    <%= select_tag(:search_type, options_for_select(["フリーワード", "ユーザー名"].map.with_index{|word, i| [word.to_s, i] }), class: "pure-input-1-4") %>
  </div>
  <div class="pure-control-group">
    <%= label_tag("キーワード") %>
    <%= text_field_tag :keyword, "", placeholder: "検索したい文字列を入力してください", class: "pure-input-2-3" %>
  </div>
  <div class="pure-controls">
    <%= submit_tag("画像をダウンロードする", class: "pure-button pure-button-primary") %>
  </div>
<% end %>