<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ペッパソン2017 きのこ</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <%= stylesheet_link_tag 'bannosama/vendor.css' %>
    <%= stylesheet_link_tag 'bannosama/app.css' %>
    <%= javascript_include_tag 'libraries/jquery.min.js' %>
    <%= javascript_include_tag 'bannosama/jquery.uploadThumbs.js' %>

    <!-- for loading -->
    <%= stylesheet_link_tag 'bannosama/loading.css' %>
    <%= javascript_include_tag 'bannosama/loading.js' %>
  </head>

  <body>
    <div class="main-wrapper">
      <div class="app" id="app">
        <header class="header">
          <div class="header-block header-block-collapse hidden-lg-up">
            <button class="collapse-btn" id="sidebar-collapse-btn">
              <i class="fa fa-bars"></i>
            </button>
          </div>
          <div class="header-block header-block-search hidden-sm-down">
            <form role="search">
              <div class="input-container">
                <i class="fa fa-search"></i>
                <input type="search" placeholder="Search">
                <div class="underline"></div>
              </div>
            </form>
          </div>
          <div class="header-block header-block-buttons">
            <%= link_to("http://twitter.com/share?url=#{bannosama_convey_url}", class: "btn btn-sm header-btn") do %>
              <i class="fa fa-twitter"></i>
              <span>Twitterでシェア</span>
            <% end %>
            <%= link_to("https://plus.google.com/share?url=#{bannosama_convey_url}", class: "btn btn-sm header-btn") do %>
              <i class="fa fa-google-plus"></i>
              <span>Google+でシェア</span>
            <% end %>
            <%= link_to("https://www.facebook.com/sharer/sharer.php?u=#{bannosama_convey_url}", class: "btn btn-sm header-btn") do %>
              <i class="fa fa-facebook"></i>
              <span>Facebookでシェア</span>
            <% end %>
          </div>

          <div class="header-block header-block-nav">
            <ul class="nav-profile">
              <li class="notifications new">
                <%= link_to("", data: {toggle: "dropdown"}) do %>
                  <i class="fa fa-bell-o"></i>
                  <sup>
                    <span class="counter">8</span>
                  </sup>
                <% end %>
                <div class="dropdown-menu notifications-dropdown-menu">
                  <ul class="notifications-container">
                    <li>
                      <%= link_to("", class: "notification-item") do %>
                        <div class="img-col">
                          <div class="img" style="background-image: url('<%= image_path("bannosama/target_face1.png") %>')"></div>
                        </div>
                        <div class="body-col">
                          <p>
                            <span class="accent">伴野 智樹さん</span>が新たなスタートをきりました。日頃の感謝の気持ちを伝えませんか
                          </p>
                        </div>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to("", class: "notification-item") do %>
                        <div class="img-col">
                          <div class="img" style="background-image: url('<%= image_path("bannosama/target_face2.png") %>')"></div>
                        </div>
                        <div class="body-col">
                          <p>
                            <span class="accent">おばあちゃん</span>が誕生日です。お祝いメッセージを伝えませんか
                          </p>
                        </div>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to("", class: "notification-item") do %>
                        <div class="img-col">
                          <div class="img" style="background-image: url('<%= image_path("bannosama/target_face3.png") %>')"></div>
                        </div>
                        <div class="body-col">
                          <p>
                            <span class="accent">村瀬さん</span>がペッパソンに参加しました。お疲れさまメッセージを送りませんか
                          </p>
                        </div>
                      <% end %>
                    </li>
                  </ul>
                  <footer>
                    <ul>
                      <li>
                        <%= link_to("View All", "") %>
                      </li>
                    </ul>
                  </footer>
                </div>
              </li>
              <li class="profile dropdown">
                <%= link_to("#", {class: "nav-link dropdown-toggle", data: {toggle: "dropdown"}, role: "button", aria: {haspopup: "true", expanded: "false"}}) do %>
                  <!-- <div class="img" style="background-image: url('https://avatars3.githubusercontent.com/u/3959008?v=3&s=40')"> </div> -->
                  <div class="img" style="background-image: url('<%= image_path("bannosama/face.png") %>')"> </div>
                  <span class="name">
                    きのこ
                  </span>
                <% end %>
                <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
                  <%= link_to("#", class: "dropdown-item") do %>
                    <i class="fa fa-user icon"></i> プロファイル
                  <% end %>
                  <%= link_to("#", class: "dropdown-item") do %>
                    <i class="fa fa-bell icon"></i> 通知
                  <% end %>
                  <%= link_to("#", class: "dropdown-item") do %>
                    <i class="fa fa-gear icon"></i> 設定
                  <% end %>
                  <div class="dropdown-divider"></div>
                  <%= link_to("login.html", class: "dropdown-item") do %>
                    <i class="fa fa-power-off icon"></i> ログアウト
                  <% end %>
                </div>
              </li>
            </ul>
          </div>
        </header>
        <aside class="sidebar">
          <div class="sidebar-container">
            <div class="sidebar-header">
              <div class="brand">
                <div class="logo">
                  <span class="l l1"></span>
                  <span class="l l2"></span>
                  <span class="l l3"></span>
                  <span class="l l4"></span>
                  <span class="l l5"></span>
                </div>
                ペッパー様
              </div>
            </div>
            <nav class="menu">
              <ul class="nav metismenu" id="sidebar-menu">
                <li>
                  <%= link_to("#") do %>
                    <i class="fa fa-home"></i> ホーム
                  <% end %>
                </li>
              </ul>
            </nav>
          </div>
          <footer class="sidebar-footer">
            <ul class="nav metismenu" id="customize-menu">
              <li>
                <%= link_to("#") do %>
                  <i class="fa fa-cog"></i> カスタマイズ
                <% end %>
              </li>
            </ul>
          </footer>
        </aside>
        <div class="sidebar-overlay" id="sidebar-overlay"></div>
        <%= yield %>
      </div>
    </div>
    <!-- Reference block for JS -->
    <div class="ref" id="ref">
      <div class="color-primary"></div>
      <div class="chart">
        <div class="color-primary"></div>
        <div class="color-secondary"></div>
      </div>
    </div>
    <%= javascript_include_tag 'bannosama/vendor.js' %>
    <%= javascript_include_tag 'bannosama/app.js' %>
    <%= javascript_include_tag 'bannosama/main.js' %>
  </body>
</html>